[
	{ rabbit, [
    {tcp_listen_options, [binary, {backlog, 1024}, {nodelay, true}, {keepalive, true} ]},
    {vm_memory_high_watermark, 0.6},
		{ loopback_users, [ ] },
		{ tcp_listeners, [ 5672 ] },
		{ ssl_listeners, [ 5671] },
		{ssl_options, [
			{cacertfile, "/etc/rabbitmq/certs/ca_certificate.pem"},
			{certfile,   "/etc/rabbitmq/certs/server_certificate.pem"},
			{keyfile,    "/etc/rabbitmq/certs/server_key.pem"},
			{verify, verify_peer},
			{fail_if_no_peer_cert, true}
		]},
		{ default_pass, <<"password">> },
		{ default_user, <<"admin">> },
		{ hipe_compile, false }
	] },

	{ rabbitmq_management, [ { listener, [
		{ port, 15672 },
		{ ssl, false }
	] },
		{load_definitions, "/etc/rabbitmq/definitions.json"}
	] }
].